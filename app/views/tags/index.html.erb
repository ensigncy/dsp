<h1>Listing tags</h1>

<table>
  <tr>
    <th>Tcode</th>
    <th>Tvalue</th>
    <th>Tname</th>
    <th>Default</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.tcode %></td>
    <td><%= tag.tvalue %></td>
    <td><%= tag.tname %></td>
    <td><%= tag.default %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

